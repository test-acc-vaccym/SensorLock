<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:scrollbars="vertical" >

 		<!-- android:orientation="2" -->

    <CheckBox
        android:id="@+id/isTracking"
        android:layout_gravity="start"
        android:text="@string/isTracking_LBL" android:checked="false" />
    <Button
        android:id="@+id/button2"
        android:layout_gravity="start"
        android:text="Snap" />
    <Button
        android:id="@+id/button3"
        android:layout_gravity="start"
        android:text="SnapLoop" />
    
    <LinearLayout
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Sensor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  android:text="test"/>

    	<TextView
    	    android:id="@+id/Sensor2"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:padding="5dp" android:text="test"/>
        <TextView
    	    android:id="@+id/Sensor3"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:padding="5dp" android:text="test"/>
    </LinearLayout>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Xdim_LBL" />
    	<TextView
        android:id="@+id/xValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    	<TextView
        android:id="@+id/xValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="test"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ydim_LBL" />	
    <TextView
        android:id="@+id/yValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/yValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
            
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Zdim_LBL" />
    <TextView
        android:id="@+id/zValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />	
    <TextView
        android:id="@+id/zValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/button1"
        android:layout_gravity="start"
        android:text="Lock" />
    <Button
        android:id="@+id/button4"
        android:layout_columnSpan="2"
        android:layout_gravity="start"
        android:text="Clear Log" />
    
    <EditText
        android:id="@+id/logFld"
        android:layout_columnSpan="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_horizontal"
        android:ems="10"
        android:gravity="center_vertical|top|start"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:focusable="false"
         >

        <!-- <requestFocus /> -->
    </EditText>
    
</GridLayout>
    
  
 
